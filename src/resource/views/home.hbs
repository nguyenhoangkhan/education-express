<div class="container mt-4">
  <div class="row">

    {{#each courses}}
      <div class="col-sm-6 col-md-6 col-lg-4">
        <div class="card mt-4" style="width: 18rem;">
          <a href="/courses/{{this.slug}}">
            <img
              class="card-img-top"
              src="{{this.thumbnail}}"
              alt="Card image cap"
            />
          </a>
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.decription}}</p>
            <a href="courses/{{this.slug}}" class="btn btn-primary">Mua khóa học</a>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>